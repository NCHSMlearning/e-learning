    <script>
        // Initialize Supabase
        const supabaseUrl = 'https://lwhtjozfsmbyihenfunw.supabase.co';
        const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Imx3aHRqb3pmc21ieWloZW5mdW53Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTk2NTgxMjcsImV4cCI6MjA3NTIzNDEyN30.7Z8AYvPQwTAEEEhODlW6Xk-IR1FK3Uj5ivZS7P17Wpk';
        
        const supabase = window.supabase.createClient(supabaseUrl, supabaseKey);

        // DOM elements
        const loginForm = document.getElementById('login-form');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const loginBtn = document.getElementById('login-btn');
        const btnText = document.getElementById('btn-text');
        const errorMessage = document.getElementById('error-message');
        const errorText = document.getElementById('error-text');
        const rememberMe = document.getElementById('remember-me');

        // Load saved email if "remember me" was checked
        window.addEventListener('DOMContentLoaded', () => {
            const savedEmail = localStorage.getItem('nurseiq_admin_email');
            if (savedEmail) {
                emailInput.value = savedEmail;
                rememberMe.checked = true;
            }
        });

        // Handle form submission
        loginForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = emailInput.value.trim();
            const password = passwordInput.value;
            
            // Validate inputs
            if (!email || !password) {
                showError('Please enter both email and password');
                return;
            }
            
            if (!isValidEmail(email)) {
                showError('Please enter a valid email address');
                return;
            }
            
            // Show loading state
            setLoading(true);
            
            try {
                // Sign in with Supabase
                const { data, error } = await supabase.auth.signInWithPassword({
                    email: email,
                    password: password
                });
                
                if (error) {
                    throw error;
                }
                
                // Check if user is admin (you'll implement this check)
                const isAdmin = await checkAdminStatus(data.user.id);
                
                if (!isAdmin) {
                    await supabase.auth.signOut();
                    throw new Error('Access denied. Admin privileges required.');
                }
                
                // Save email if "remember me" is checked
                if (rememberMe.checked) {
                    localStorage.setItem('nurseiq_admin_email', email);
                } else {
                    localStorage.removeItem('nurseiq_admin_email');
                }
                
                // Save session
                sessionStorage.setItem('nurseiq_admin_session', JSON.stringify({
                    user: data.user,
                    expires_at: data.session.expires_at
                }));
                
                // Redirect to admin panel
                showSuccess('Login successful! Redirecting...');
                setTimeout(() => {
                    window.location.href = 'nurseiq-admin.html'; // Your existing admin panel
                }, 1000);
                
            } catch (error) {
                console.error('Login error:', error);
                
                // User-friendly error messages
                let errorMsg = 'Login failed. ';
                
                if (error.message.includes('Invalid login credentials')) {
                    errorMsg += 'Invalid email or password.';
                } else if (error.message.includes('Email not confirmed')) {
                    errorMsg += 'Please confirm your email address first.';
                } else if (error.message.includes('Access denied')) {
                    errorMsg = 'Access denied. Admin privileges required.';
                } else {
                    errorMsg += error.message;
                }
                
                showError(errorMsg);
                setLoading(false);
            }
        });

        // Helper functions
        function isValidEmail(email) {
            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
        }

        function setLoading(isLoading) {
            if (isLoading) {
                loginBtn.disabled = true;
                btnText.innerHTML = '<span class="spinner"></span> Signing in...';
            } else {
                loginBtn.disabled = false;
                btnText.textContent = 'Sign In';
            }
        }

        function showError(message) {
            errorText.textContent = message;
            errorMessage.classList.add('show');
            
            // Auto-hide error after 5 seconds
            setTimeout(() => {
                errorMessage.classList.remove('show');
            }, 5000);
        }

        function showSuccess(message) {
            errorText.textContent = message;
            errorMessage.style.background = '#dcfce7';
            errorMessage.style.color = '#16a34a';
            errorMessage.classList.add('show');
        }

        function showForgotPassword() {
            const email = emailInput.value.trim() || prompt('Enter your email to reset password:');
            if (email && isValidEmail(email)) {
                supabase.auth.resetPasswordForEmail(email, {
                    redirectTo: window.location.origin + '/reset-password.html'
                }).then(() => {
                    alert('Password reset email sent! Check your inbox.');
                });
            }
        }

        // Update the checkAdminStatus function
async function checkAdminStatus(userId) {
    try {
        const { data, error } = await supabase
            .from('consolidated_user_profiles_table')
            .select('role, full_name, email')
            .eq('user_id', userId)
            .in('role', ['superadmin', 'admin'])
            .single();
        
        if (error || !data) {
            console.log('User is not admin:', error?.message);
            return false;
        }
        
        console.log('Admin user found:', data);
        return {
            isAdmin: true,
            role: data.role,
            name: data.full_name,
            email: data.email
        };
    } catch (error) {
        console.error('Error checking admin status:', error);
        return false;
    }
}

        // Check for existing session
        async function checkExistingSession() {
            try {
                const { data } = await supabase.auth.getSession();
                
                if (data.session) {
                    const isAdmin = await checkAdminStatus(data.session.user.id);
                    if (isAdmin) {
                        // Auto-redirect to admin panel
                        window.location.href = 'nurseiq-admin.html';
                    }
                }
            } catch (error) {
                console.log('No valid session found');
            }
        }

        // Check session on page load
        checkExistingSession();
    </script>
</body>
